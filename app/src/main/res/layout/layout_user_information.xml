<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical"
        android:padding="10dp"
        android:focusableInTouchMode="false"
        android:background="@color/orginal_white"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:background="@color/orginal_white"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableLeft="@mipmap/icon_user_dialog"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:textSize="15dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end"
                            >

                        <TextView
                            android:id="@+id/addtofav_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:drawablePadding="2dp"
                            android:layout_alignParentRight="true"
                            android:drawableTop="@mipmap/icon_blnkstar"
                            android:text="@string/add_to_fav"
                            android:textSize="@dimen/small_text_size" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:autoLink="email"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableLeft="@mipmap/icon_mail_dialog"
                        android:gravity="center_vertical"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/tv_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:autoLink="phone"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableLeft="@mipmap/icon_call_dialog"
                        android:gravity="center_vertical" />


                    <TextView
                        android:id="@+id/tv_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/icon_designation"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center_vertical" />


                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/icon_user_dialog"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center_vertical" />


                </LinearLayout>


                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_action"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/button_selector_blue_whiteshade"
                        android:text="@string/assign_task_to_user"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:textSize="15dp" />


                </android.support.v7.widget.LinearLayoutCompat>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/delete_orange"/>
</RelativeLayout>